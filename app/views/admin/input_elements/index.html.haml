%h2 Sliders

%p= link_to 'Create new slider', new_admin_input_element_path

%table.default
  %thead
    %tr
      %th.tal id
      %th Slide
      %th.tal Name #{I18n.locale}
      %th.tal Key
      %th.tal Converter
      %th.tal Comment
      %th

  %tbody
    - @input_elements.each do |i|
      %tr{cycles}
        %td= i.id
        %td= i.slides.map(&:short_name).join(', ')
        %td= t "input_elements.#{i.key}"
        %td= i.key
        %td= i.related_converter
        %td= truncate(i.comments, :length => 100)
        %td
          = link_to 'Edit', edit_admin_input_element_path(i)
          = link_to 'Delete', [:admin, i], :method => :delete, :confirm => 'Are you sure?'
