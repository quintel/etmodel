- title 'Sliders'

%p= link_to 'Create new slider', new_admin_input_element_path

%table{table_defaults}
  %thead
    %tr
      %th.tal id
      %th.tal Name
      %th.tal Comment      
   

  %tbody
    - @input_elements.each do |input_element|
      %tr{cycles}
        %td= input_element.id
        %td= link_to input_element.name, edit_admin_input_element_path(input_element)
        %td= input_element.comments
