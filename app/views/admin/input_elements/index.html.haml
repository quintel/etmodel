- title 'Sliders'

%p= link_to 'Create new slider', new_admin_input_element_path

%table{table_defaults}
  %thead
    %tr
      %th.tal id
      %th.tal Name
      %th.tal Start value
      %th.tal Price
      %th.tal Group      
      %th.tal fixed?      

  %tbody
    - @input_elements.each do |input_element|
      %tr{cycles}
        %td= input_element.id
        %td= link_to input_element.name, edit_admin_input_element_path(input_element)
        %td= input_element.start_value rescue "ERROR!! fix it"
        %td= input_element.share_group
        %td= input_element.fixed
