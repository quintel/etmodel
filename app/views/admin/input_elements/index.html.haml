%h2 Sliders

%p= link_to 'Create new slider', new_admin_input_element_path

%table.default
  %thead
    %tr
      %th.tal id
      %th.tal Name #{I18n.locale}
      %th.tal Key
      %th.tal Converter
      %th.tal Comment
      %th.tal 

  %tbody
    - @input_elements.each do |input_element|
      %tr{cycles}
        %td= input_element.id
        %td= t "input_elements.#{input_element.key}"
        %td= input_element.key
        %td= input_element.related_converter
        %td= truncate(input_element.comments, :length => 100)
        %td
          = link_to 'Edit', edit_admin_input_element_path(input_element)
          = link_to 'Delete', [:admin, input_element], :method => :delete, :confirm => 'Are you sure?'
