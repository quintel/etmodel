%h2 Interface map

%a(href="#" onclick="$('ul.slides').toggle(); return false;") toggle slides
%a(href="#" onclick="$('ul.sliders').toggle(); return false;") toggle sliders

%ul#interface_map
  - Tab.frontend.each do |tab|
    %li
      = link_to tab.key, edit_admin_tab_path(tab)
      %ul
        - tab.sidebar_items.ordered.each do |sidebar_item|
          %li
            = link_to sidebar_item.key, edit_admin_sidebar_item_path(sidebar_item)
            %ul.slides
              - sidebar_item.slides.sort_by(&:position).each do |slide|
                %li
                  = link_to slide.key, edit_admin_slide_path(slide)
                  %ul.sliders
                    - slide.sliders.ordered.each do |slider|
                      %li= link_to slider.key, edit_admin_input_element_path(slider)

