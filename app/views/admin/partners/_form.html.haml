= simple_form_for [:admin, @partner] do |f|
  = f.input :name
  = f.input :partner_type, :as => :select, :collection => %w[general knowledge education], :include_blank => false
  = f.input :url
  = f.input :country, :as => :select, :collection => Api::Area.all.map(&:country)
  = f.input :time
  = f.input :repeat_any_other
  = f.input :subheader
  = f.input :place, :as => :select, :collection => ['left', 'right']
  = f.input :long_name
  
  = f.simple_fields_for :description do |j|
    = j.input :short_content_en, :as => :text
    = j.input :short_content_nl, :as => :text
    = j.input :content_en, :as => :text
    = j.input :content_nl, :as => :text
  
  = f.button :submit