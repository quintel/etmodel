%table
  %tr
    -@column_names.each do |column_name|
      %th.tal=column_name.humanize

  -@slides.each do |slide|
    %tr{cycles}
      -@column_names.each do |column_name|
        %td
          %a{:href => edit_admin_slide_path(slide.id), :style => "color: #000; text-decoration: none;"}
            =slide.send(column_name)
%a{:href => new_admin_slide_path}
  new slide