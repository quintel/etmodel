%li{:id=> "input_elements", :class => "node_list grey_right"}    
  %h1 Input Elements
  %hr
  %ul
    - elements.each do |input_element|
      %li{:class => "node_item #{input_element.id.to_s == params[:input_element].to_s ? "active": ""}", :id=>"node_#{input_element.id}"}
        - if input_element.element
          = link_to input_element.element.name, "#"
          = button_to "", admin_view_node_path(input_element), :confirm => "This will remove this input element!", :method => :delete
          = link_to image_tag("/images/layout/icons/edit.png", :size=>"14x14", :class=> "edit_button"), edit_admin_view_node_path(input_element, :tab => params[:tab], :sidebar => params[:sidebar], :slide => params[:slide],:input_element => true)
    %li
      = link_to image_tag("/images/layout/icons/add.png", :size=>"14x14"), new_admin_view_node_path(:view_node => {:parent_id => params[:slide]},:tab => params[:tab], :sidebar => params[:sidebar], :slide => params[:slide],:input_element => true)

    
