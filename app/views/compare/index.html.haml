%main.intro
  %h1= t('local_global.title')
  %p.description= t('local_global.introduction')

  - if current_user
    - if current_user.saved_scenarios.count.zero?
      %p.description
        %strong= t('local_global.no_scenarios')
      %ol.description.instructions
        %li= t('local_global.how.step1_html', root_path: root_path)
        %li
          = t('local_global.how.step2')
          %span#settings-menu-example
            = t('header.settings')
            &arr;
            = t('header.save_scenario')
          #settings-menu-image
            = image_tag "pages/compare/settings-menu.#{I18n.locale}.png"
        %li= t('local_global.how.step3')

    - else
      %p.description
        %strong= t('local_global.how.prompt')

      = form_tag compare_scenarios_path, method: 'get', class: 'select-scenarios' do
        %ul#available-scenarios
          = render partial: 'scenarios_slice', locals: { scenarios: @scenarios }
        #commit
          = submit_tag "#{t('scenario.local_vs_global')} â†’", name: 'combine'
  - else
    %p.description
      %strong
        = t('local_global.account_required_html', login_path: login_path)
