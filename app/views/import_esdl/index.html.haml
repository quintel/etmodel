- content_for(:page_title) { "Import ESDL - #{t('meta.name')}" }
.background_wrapper
  #esdl
    .half_page.with_bar
      %h1= t('esdl.title')

      .description
        = t('esdl.description').html_safe
    .half_page.two_parts
      #mondaine_drive
        - if @user_info and false
          %h2 Mondaine Drive van #{@user_info['name']}
        - else
          .login_to_drive
            %h2= t('esdl.mondaine_drive.use')
            %a.button.login{href: esdl_suite_login_path}
              = t('esdl.mondaine_drive.sign_in')
          %a{href: 'https://www.mondaine-suite.nl/library/'}= t('esdl.mondaine_drive.about')
          .dot{ class: 'fa fa-circle' }
          %a{href: 'mondaine_drive.nl'}= t('esdl.mondaine_drive.sign_up')
      %h2= t('esdl.or')
      = form_with url: import_esdl_create_path, id: 'import_esdl' do |f|
        .upload_file
          %h2 #{t('esdl.upload')}
          = f.file_field :esdl_file, required: true, accept: '.esdl'
        = f.submit t('esdl.start'), class: 'button start_esdl'
        .wait.start_esdl
          = image_tag 'layout/ajax-loader-small.gif'
          = t('esdl.creating')
          &hellip;
