%div{:id => "slider-group-%s-%s" % [slider.share_group, slider.id]}
  %div{:id => dom_id(slider)}
    .name
      .text
        = raw slider.translated_name
        - if (APP_CONFIG[:enable_backcasting] || session[:enable_backcasting]) && slider.predictions.any?
          = link_to "Predictions", predictions_path(:input_element_id => slider.id), :class => 'prediction'
      .label
    .info-box{:style => 'display: none'}
      .text= slider.parsed_description