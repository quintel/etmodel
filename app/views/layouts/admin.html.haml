!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title
      EnergyTransitionModel
    = stylesheet_link_tag 'all'
    = stylesheet_link_tag 'vendor/formtastic'
    = stylesheet_link_tag 'admin'
    = javascript_include_tag :defaults, :cache => true
    = sprocket_layout_init :admin
    
  %body#model
    #wrapper
      #content
        - flash_message
        = yield
        .clear

      #header
        = render "layouts/etm/header"
        #nav.nav-admin
          .nav-holder.nav-holder-inner{:style=>"float:left"}
            = tabs_tag do |tab|
              = tab.main                   'Main', admin_root_path
              = tab.translations           'Translations', admin_translations_path
              = tab.interfaces             'Interfaces', admin_interfaces_path
              = tab.tabs                   'Tabs', admin_tabs_path
              = tab.sidebar_items          'Sidebar Items', admin_sidebar_items_path
              = tab.slides                 'Slides', admin_slides_path
              = tab.input_elements         'Input Elements', admin_input_elements_path
              = tab.output_elements        'Output Elements', admin_output_elements_path
              = tab.output_elements_series 'Series', admin_output_element_series_path
              = tab.predictions            'Backcasting', admin_predictions_path
              = tab.press_releases         'Press Releases', admin_press_releases_path
              = tab.notifications          'Notifications', admin_general_user_notifications_path
              = tab.partners               'Partners', admin_partners_path
              = tab.gql_search             'GQL Search', search_admin_gql_index_path
