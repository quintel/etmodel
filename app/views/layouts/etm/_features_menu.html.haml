.dropdown
  %button#locale-button.nav-link{ aria: { expanded: 'false'}, data: { toggle: 'dropdown', 'dropdown-trigger': 'hover' }, type: 'button' }
    = t('app_nav.features')
  .dropdown-menu.learn-dropdown.features{ 'aria-labelledby': 'locale-button' }
    %strong
      :plain
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path d="M5 4a1 1 0 00-2 0v7.268a2 2 0 000 3.464V16a1 1 0 102 0v-1.268a2 2 0 000-3.464V4zM11 4a1 1 0 10-2 0v1.268a2 2 0 000 3.464V16a1 1 0 102 0V8.732a2 2 0 000-3.464V4zM16 3a1 1 0 011 1v7.268a2 2 0 010 3.464V16a1 1 0 11-2 0v-1.268a2 2 0 010-3.464V4a1 1 0 011-1z" />
        </svg>
      = t('app_nav.features')
    %ul
      %li= learn_link t('app_nav.whats_new'), whats_new_path
      - if current_user
        %li= learn_link t('header.load_scenario'), scenarios_path
      %li= learn_link t('app_nav.transition_paths'), multi_year_charts_path
    .extras
      %ul
        %li.learn-section
          :plain
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z" />
            </svg>
          = t('app_nav.other_apps')
        %li= learn_link t('app_nav.game'), 'https://light.energytransitionmodel.com'
        -# %li= learn_link t('app_nav.local_vs_global'), local_global_path
        %li= learn_link t('app_nav.mondaine_suite'), import_esdl_path
