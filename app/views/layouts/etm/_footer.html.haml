#logos
  #all_container
    #two_container
      %ul.left
        - company = Partner.all.first
        %li{ timeout: 60000 }
          = link_to company.name, "#{ company.link }?locale=#{ I18n.locale }", id: company.name.downcase, style: "background-image: url('#{ company.img }');", target: '_blank'

          .clear

          %p#subheader= t('footer.main_sponsor')

      %ul.right
        - Partner.all[1..-1].select(&:is_primary?).each do |company|
          %li{ timeout: 10000 }
            = link_to company.name, "#{ company.link }?locale=#{ I18n.locale }", id: company.name.downcase, style: "background-image: url('#{ company.img }');", target: '_blank'

            .clear

            %p#subheader= t('footer.sponsor')
