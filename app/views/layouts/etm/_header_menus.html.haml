
%fieldset{:id => "signin_menu", :class => "topnav header_menu"}
  - @user_session = UserSession.new
  = form_for(@user_session) do |f|
    = f.error_messages
    %p
      = f.label :email, t("user.email")
      %br
      = f.text_field :email
    %p
      = f.label :password, t("user.password")
      %br
      = f.password_field :password
    %p
      = f.label :remember_me, t("user.remember")
      %br
      = f.check_box :remember_me, :checked => "checked"
    = f.submit 'Login'
  %a{:href => new_user_path}= "#{t("or")} #{t("header.create_account")}"

#settings_menu.header_menu.topnav
  - if has_active_scenario?
    %li
      #flag
        %img{src: icon_for_area_code(Current.setting.area_code), title: I18n.t(Current.setting.area_code), width: 16 }
        = I18n.t(Current.setting.area_code) unless Current.setting.area_code.length == 2
      #{t "header.current_country"}:
    %li
      #year= Current.setting.end_year
      #{t "header.current_end_year"}:

  %li
    #{t "header.current_language"}:
    = select_tag "locale", options_for_select([:en, :nl], I18n.locale)

  %li
    - if has_active_scenario?
      %a{:href => new_scenario_path}= t("header.save_scenario")
    %a{:href => scenarios_path}= t("header.load_scenario")
    - if has_active_scenario?
      %a#reset_scenario{:href => reset_scenario_path}= t("header.reset_scenario")
  - if controller_name != 'pages' && has_active_scenario?
    - if Current.setting.use_peak_load
      %li
        = check_box :track_peak_load, :settings,
          :onchange => 'App.settings.toggle_peak_load_tracking()',
          :checked => Current.setting.track_peak_load
        %label{:for => "track_peak_load_settings"}
          = t 'header.notify_of_grid_investments'
    - if Current.setting.allow_fce?
      %li
        = check_box :settings, :use_fce, :checked => Current.setting.use_fce
        %label{:for => "settings_use_fce"}= t('fce.check')
    - if params[:debug]
      %li
        %form{:action => 'http://beta.et-engine.com/mechanical_turk/factory', :method => 'post', :target => '_blank', :id => 'turkit'}
          %input#last_api_response{:type => 'hidden', :name => 'json_data'}
          = submit_tag "Turk it"

#information_menu.header_menu.topnav
  %li
    %a{:href => "/about"}= t("header.about_qi")
  %li= link_to t("header.partners"), partners_path
  %li
    %a{:href => "http://onderwijs.quintel.nl/", :target => '_new'}= t("header.education")
  %li
    %a{:href => "/famous_users"}= t("header.famous_users")
  %li
    %a{:href => "/press_releases"}= t("header.press_releases")
  %li
    %a{:href => "/units"}= t("header.units_used")
  %li
    %a{:href => "/privacy_statement"}= t("header.privacy_statement")
  %li
    %a{:href => "/disclaimer"}= t("header.disclaimer")
  %li= link_to t('header.bugs'), bugs_path
  - unless APP_CONFIG[:standalone]
    %li= link_to "Wiki", "http://wiki.quintel.com", :target => "_blank"
    %li= link_to t('header.publications'), "http://refman.et-model.com", :target => "_blank"
    %li= link_to t('header.feedback'), "/feedback", :class => "fancybox"
