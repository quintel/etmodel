#sidebar
  %ul
    - Current.view.sidebar_items.each do |item|
      %li{:id => item.key,
          :class => (params[:id] == item.key) ? 'active' : nil,
          :'data-gquery' => item.percentage_bar_query}
        = link_to url_for(:action => item.key),
          :class => "ico-#{item.key}",
          :'data-nav' => true do
          %em &nbsp;
          %p
            %span.title= raw t("sidebar_items.#{item.key}")
            - unless item.percentage_bar_query.blank?
              %span.bar{:alt => t('sidebar_items.alt'), :style => "width: 0px"}
              %span.value
