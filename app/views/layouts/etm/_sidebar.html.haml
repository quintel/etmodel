#info_box
  #flag
    %img{:src => "/assets/icons/#{Current.setting.area_code}.png"}
    = Current.setting.area_code if Current.setting.area_code != "nl"
  #year= Current.setting.end_year
-# DEBT: TO BE REPLACED WITH nav#sidebar
#sidebar
  - Current.view.tabs.each do |tab|
    %h4.headline= I18n.t "tabs." + tab.key
    %ul{style: ("display: none;" unless controller.controller_name == tab.key )}
      - tab.sidebar_items.each do |item|
        %li{:id => item.key,
            :class => (params[:id] == item.key) ? 'active' : nil,
            :'data-gquery' => item.percentage_bar_query}
          = link_to url_for(:controller => tab.key, :action => item.key),
            :'data-nav' => false do
            %p
              %span.title
                = raw t("sidebar_items.#{item.key}")
              - if item.percentage_bar_query.present?
                %span.bar{:alt => t('sidebar_items.alt'), :style => "width: 0px"}
                %span.value
