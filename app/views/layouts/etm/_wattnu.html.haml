#round-selector
  = radio_button_tag :current_round, 1, Current.setting.current_round.to_i == 1
  Ronde 1
  %br
  = radio_button_tag :current_round, 2, Current.setting.current_round.to_i == 2
  Ronde 2
  %br
  = radio_button_tag :current_round, 3, Current.setting.current_round.to_i == 3
  Ronde 3

:javascript
  $(function(){
     $("#round-selector input").change(function(){
      var round = $(this).val();
      update_score_badges(round);
      App.settings.set({current_round: round});
     });

     // initial trigger
     var current_round = #{Current.setting.current_round.to_json};
     update_score_badges(current_round);
     App.settings.set({current_round: current_round});
  });

  function update_score_badges(round) {
    $(".watt-nu").hide();
    var total = 0;
    var items = [];
    if (round == 1) {
      items = ["#co2_reduction-score"];
    } else if (round == 2) {
      items = ["#co2_reduction-score", "#total_energy_cost-score"];
    } else if (round == 3) {
      items = ["#co2_reduction-score", "#total_energy_cost-score", "#renewable_percentage-score"];
    }
    
    if (round) {
      _.each(items, function(i){
        el = $(i);
        el.show();
      })
      $("#targets_met-score").show();
    }
  }
