#select_charts
  %h1 
    = t("output.available")
  - %w[Overview Dashboard Policy Supply Demand ].each do |group|
    %h1= t(group)
    - OutputElement.select_by_group(group).each do |output_element|
      %div
        %a{:class => "pick_charts", :id =>"output_#{output_element.id}"}
          %h2= t("output."+output_element.name).html_safe
          %p   
            - desc = output_element.description
            = desc.blank? ? "" : desc.short_content
            = image_tag "output_elements/#{output_element.output_element_type.name}.png", :size => "100x60"
