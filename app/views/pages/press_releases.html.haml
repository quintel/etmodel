#page_wrapper.information_page
  %h1= t("information.in the news")

  %h3=  t("information.overview")

  - @releases.each do |release|
    %div
      =image_tag("layout/#{(release.release_type == 'radio' ? "speaker.jpeg" : "pdf_icon.gif")}", :class =>"left", :size=>"35x40",:style =>"padding-right:10px")
    %strong= release.medium
    %small= format_date_nicely_veryshort(release.release_date)
    %br
    = link_to(release.title ? release.title : "Open persbericht", release.link, :target => '_blank')
    %h3
