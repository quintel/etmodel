- if show_releases_banner?
  #releases
    .content
      %p
        %strong= t('updated.title').html_safe
        = t('updated.description').html_safe
      %p
        %strong= link_to "#{t('more_information')} →", releases_url, target: '_blank', rel: 'noopener noreferrer'

#landing
  #blurb
    %h1= t('intro.introduction')
    %p= t('intro.root_text')

  - if has_active_scenario?
    = render partial: 'pages/root_page/resume_scenario'

  = render partial: 'pages/root_page/new_scenario'
  = render partial: 'pages/root_page/preset_scenario'

  .header-container.loose
    %h4.title= t('intro.features.title')
  #other-features
    .feature.releases
      %h4= t('intro.releases.title')

      %p= t('intro.releases.description')

      %p
        = "#{t('intro.releases.date')}: #{l(ETModel::Version::DATE, format: :long)}"

      %p
        = link_to(releases_url, target: '_blank', rel: 'noopener noreferrer') do
          = t('intro.releases.link')
          →
    .feature.dataset
      %h4= t('intro.dataset.title')
      %p= t('intro.dataset.description')
      %p
        = link_to("https://data.energytransitionmodel.com", target: '_blank', rel: 'noopener noreferrer') do
          = t('intro.dataset.link')
          →
    - if Settings.collections_url
      .feature.multi-year-charts
        %h4= t('intro.collections.title')
        %p= t('intro.collections.description')
        %p
          = link_to(Settings.collections_url) do
            = t('intro.collections.try_it')
            →
    .feature.docs
      %h4= t('intro.docs.title')
      %p= t('intro.docs.description')
      %p
        = link_to("https://docs.energytransitionmodel.com", target: '_blank', rel: 'noopener noreferrer') do
          = t('intro.docs.link')
          →
    .feature.api
      %h4= t('intro.api.title')
      %p= t('intro.api.description')
      %p
        = link_to("https://docs.energytransitionmodel.com/api/intro", target: '_blank', rel: 'noopener noreferrer') do
          = t('intro.api.link')
          →
    .feature.quintel
      %h4= t('intro.about_us.title')
      %p= t('intro.about_us.description')
      %p
        = link_to('https://quintel.com', target: '_blank', rel: 'noopener noreferrer') do
          = t('intro.about_us.learn_more')
          →

  #area-select-options
  .flags{ style: 'display: none'}
    - flags.each do |flag|
      = image_tag flag, class: File.basename(flag, '.png')
    .ukni01_northern_ireland.blank-flag

  #legal
    = render partial: 'layouts/etm/footer'
