%h1 
  %span= "#{distance_of_time_in_words(Time.now, @prediction.created_at)} #{t 'ago'} "
  %strong= @prediction.title
  #{t 'prediction.by'}
  = @prediction.user.try(:name)
  = "(#{@prediction.user.try(:company_school)})"

- if user_scenario_available?
  .buttons.right
    = button_to_function t('prediction.share_prediction'), "#", :class => 'share_prediction', :href => share_prediction_path(@prediction)
  .buttons
    = button_to_function t('prediction.use_prediction'), "return false", :class => 'apply_prediction'
- else
  .buttons

.expert_avatar
  = image_tag("/images/layout/prediction_#{@prediction.user.try(:name).gsub(' ','_').downcase}.png")
.description
  = @prediction.description.html_safe
.connector

.measures
  %i= t('prediction.measures_header')
  
  - if @prediction.measures.any?
    - @prediction.measures.each do |m|
      %ul.measure{:class => cycle('even', 'odd')}
        %li.more_info
        %li.years
          = m.year_start
          - if m.year_end
            \- #{m.year_end}
        %li.name
          = m.name
        
        - if m.description.present?
          %li.inline_description
            = m.description.html_safe
            %br
            %br
            %strong
              #{t 'prediction.impact'} 
            #{PredictionMeasure::IMPACT[m.impact]}
            %br
            %strong
              #{t 'prediction.cost'} 
            #{PredictionMeasure::COST[m.cost]}
            %br
            %strong
              #{t 'prediction.actor'} 
            = m.actor || "-"
            %br
            = t('prediction.table_footer')
  - else
    %ul.measure
      %li= t('prediction.no_measures_available')
