.header
  %strong= @prediction.title
  \- #{t 'prediction.by'}
  %strong= @prediction.user.try(:name)
  = l(@prediction.created_at, :format => :date_only)
  
.description
  = smart_truncate @prediction.description, :length => 250
.measures
  - if @prediction.measures.any?
    %table
      %thead
        %tr
          %th{:colspan => 2}= t('prediction.measures_header')
          %th= t 'prediction.impact'
          %th= t 'prediction.cost'
          %th= t 'prediction.actor'
      %tbody
        - @prediction.measures.each do |m|
          %tr{:class => cycle('even', 'odd')}
            %td.name
              = m.name
              - if m.description.present?
                .more_info
                  = link_to 'info', '#'
                  .inline_description= m.description
            %td
              = m.year_start
              - if m.year_end
                \- #{m.year_end}
            %td= PredictionMeasure::IMPACT[m.impact]
            %td= PredictionMeasure::COST[m.cost]
            %td= m.actor
        %tfoot
          %tr
            %td{:colspan => 5}= t('prediction.table_footer')
  - else
    %p= t('prediction.no_measures_available')
.share
  = link_to t('prediction.share_link'), share_prediction_path(@prediction), :target => '_blank'
  -#%a{:href => "http://twitter.com/share", :class => "twitter-share-button", :'data-count' => "none"} Tweet
  -#%script{:src => "http://platform.twitter.com/widgets.js"}
.comments
  %h3= t('prediction.comments')
  #comments_container
    = render @prediction.comments
  
  = simple_form_for @comment, :url => comment_prediction_path(@prediction), :remote => true do |f|
    %h4= t('prediction.new_comment')
    - unless current_user
      = f.input :email
      = f.input :name
    = f.input :body, :label => false
    = f.submit t('prediction.post_comment')

