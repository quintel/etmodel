.header
  %strong= @prediction.title
  \- #{t 'prediction.by'}
  %strong= @prediction.user.try(:name)
  = l(@prediction.created_at, :format => :date_only)
  
.description
  = smart_truncate @prediction.description, :length => 250
.measures
  %table
    %thead
      %tr
        %th{:colspan => 2} Maatregelen om expertverwachting te behalen
        %th= t 'prediction.impact'
        %th= t 'prediction.cost'
        %th= t 'prediction.actor'
    %tbody
      - @prediction.measures.each do |m|
        %tr{:class => cycle('even', 'odd')}
          %td.name
            = m.name
            - if m.description.present?
              .more_info
                = link_to 'info', '#'
                .inline_description= m.description
          %td
            = m.year_start
            - if m.year_end
              \- #{m.year_end}
          %td= PredictionMeasure::IMPACT[m.impact]
          %td= PredictionMeasure::COST[m.cost]
          %td= m.actor
      %tfoot
        %tr
          %td{:colspan => 5}
            De kosten van deze maatregelen worden niet meegenomen in de rest van het model
.comments
  %h3 Comments
  = render @prediction.comments
  
  = simple_form_for @comment, :url => comment_prediction_path(@prediction) do |f|
    %h4 Post a new comment
    - unless current_user
      = f.input :email
      = f.input :name
    = f.input :body, :label => false
    = f.button :submit

