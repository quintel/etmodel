%ul.details
  %li
    %strong #{t('scenario.updated')}
    = I18n.localize(scenario.updated_at, :format => :long)
  %li
    %strong #{t('scenario.area_code')}
    = t "areas.#{scenario.area_code}"
  %li
    %strong #{t('scenario.end_year')}
    = scenario.end_year

= link_to t("scenario.load"),
    load_saved_scenario_path(scenario),
    class: "button primary"
= link_to t("scenario.load_factsheet"),
    factsheet_scenario_path(scenario.scenario_id),
    class: "button"
