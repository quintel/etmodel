%h1= saved_scenario.title

= render partial: 'info', locals: { scenario: saved_scenario }

- if saved_scenario.description.presence
  .description
    = formatted_scenario_description(saved_scenario.description)

.actions
  - if owned_saved_scenario?(saved_scenario)
    = link_to t("scenario.edit_text"),
        edit_saved_scenario_path(saved_scenario.id),
        remote: true
    .dot{ class: 'fa fa-circle' }
  = link_to t("scenario.load_factsheet"),
    factsheet_scenario_path(saved_scenario.scenario_id)
