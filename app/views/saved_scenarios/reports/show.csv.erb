<%# up to 2 nests, very very very ugly %>
<%=@scenario.id%>
<%-@yml.each do |category, value| %>
  <%-value.each do |subcategory, subvalue| %>
    <%-if subvalue.is_a?(Hash)%>
      <%-subvalue.each do |subsubcategory, subsubvalue| %>
        <%=category%>;<%=subcategory%>;<%=subsubcategory%>;<%=subsubvalue%>
      <%-end%>
    <%-else%>
      <%=category%>;;<%=subcategory%>;<%=subvalue%>
    <%-end%>
  <%-end%>
<%-end%>