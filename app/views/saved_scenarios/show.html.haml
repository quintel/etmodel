.scenario_wrapper#show_scenario

  - if @warning
    .warning
      = @warning

  %h1= (@scenario.title or t 'scenario.no_title' ).truncate(40, separator: ' ')

  = link_to t("scenario.load"),
            load_saved_scenario_path(@saved_scenario),
            class: "button primary"

  = link_to t("scenario.load_factsheet"),
            factsheet_scenario_path(@saved_scenario.scenario_id),
            class: "button"

  - if @scenario.description
    %em= formatted_scenario_description(@scenario.description)

  %ul
    - if @scenario.created_at
      %li
        %strong #{t('scenario.created')}:
        = I18n.localize(@scenario.parsed_created_at, :format => :long)
    %li
      %strong #{t('scenario.area_code')}:
      = t "areas.#{@scenario.area_code}"
    %li
      %strong #{t('scenario.end_year')}:
      = @scenario.end_year
  .sharing_links
    = t('scenario.share.by')
    .copy_link
      %a
        .icon{ class: 'fa fa-copy'}
        Copy link
      .copy_box{ style: 'display: none' }
        .arrow
        .cross{ class: 'fa fa-times', title: 'Close' }
        .url= text_field_tag 'url', request.original_url
    = link_to ("mailto: |
      ?subject=#{t('scenario.share.email_subject')} #{@scenario&.title} |
      &body=#{t('scenario.share.message')} #{request.original_url}") do |
      = image_tag 'reports/share.svg'
      Email
    = link_to "http://www.twitter.com/share?url=#{request.original_url}",
              target:"_blank" do
      .icon{ class: 'fa fa-twitter'}
      Twitter
    = link_to "http://www.linkedin.com/shareArticle?mini=true&url=#{request.original_url}",
              target:"_blank" do
      .icon{ class: 'fa fa-linkedin'}
      LinkedIn
    = link_to "http://www.facebook.com/sharer.php?u=#{request.original_url}",
              target:"_blank" do
      .icon{ class: 'fa fa-facebook'}
      Facebook

  %p
    %small{:style => "font-size: 12px; font-weight: normal"}
      = t("scenario.overwritten")

:javascript
  $(document).ready( function() {
    $('.copy_link a').click(function() {
      $('.copy_box').show();
      $('.url input').focus();
    });
    $('.cross').click(function() {
      $('.copy_box').hide();
    });
  });
