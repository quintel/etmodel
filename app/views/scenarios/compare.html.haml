- size = @scenarios.size

%h2 Compare scenarios

%table.compare_scenarios
  %thead
    %tr
      %th{:colspan => 5}
      - @scenarios.each do |s|
        %th{:width => 80}= s.title
    %tr
      %th
      %th Min
      %th Avg
      %th Max
      %th #
      - @scenarios.each do |s|
        %th #{s.area_code} - #{s.end_year}
  %tbody
    - Tab.ordered.each do |tab|
      %tr
        %th.tab= t "tabs.#{tab.key}"
        %td.cell
        %td.cell
        %td.cell
        %td.cell
        - size.times do
          %td.cell
      - tab.sidebar_items.each do |sidebar|
        %tr
          %th.sidebar_item= t "sidebar_items.#{sidebar.key}.short_name"
          %td.cell
          %td.cell
          %td.cell
          %td.cell
          - size.times do
            %td.cell
        - sidebar.slides.each do |slide|
          %tr
            %th.slide= raw t "slides.#{slide.key}"
            %td.cell
            %td.cell
            %td.cell
            %td.cell
            - size.times do
              %td.cell

          - slide.sliders.each do |slider|
            %tr
              %th.slider= raw t "input_elements.#{slider.key}"
              - values = @scenarios.map{|s| s.user_values.attributes[slider.key]}.compact
              %td.cell= values.min
              %td.cell= (values.sum / values.compact.size).round(3) rescue '-'
              %td.cell= values.max
              %td.cell #{values.compact.size} / #{size}

              - @scenarios.each do |s|
                %td.cell= s.user_values.attributes[slider.key] || '-'

