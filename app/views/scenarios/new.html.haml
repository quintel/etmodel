- content_for(:page_title) { "#{t('scenario.save')} - #{t('meta.name')}" }

.scenario_wrapper
  %h1= t("scenario.save")
  %p= t("scenario.save_desc")

  = simple_form_for @saved_scenario, :url => scenarios_path do |f|
    = f.input :title, required: true
    = f.input :description, :as => :text
    = f.hidden_field :api_session_id
    = f.hidden_field :area_code
    = f.hidden_field :end_year
    = f.button :submit
